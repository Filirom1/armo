#!/bin/bash
PATH=/bin/:/usr/bin:$PATH
function start {
cd $OPENSHIFT_ARMO_DIR/version/armo/
  nohup node server.js >> $OPENSHIFT_ARMO_LOG_DIR/armoapi.log 2>&1 &
  echo "Start"
  }
function stop {
  echo "stopping ARMO..."
  export NODEPID=`cat $OPENSHIFT_ARMO_LOG_DIR/node.pid`
  kill -9 $NODEPID
}
function restart {
  stop;
  start;
}
function status {
  echo "Not currently made"
}
case "$1" in
  start) start ;;
  stop) stop ;;
  restart) restart ;;
  status) status ;;
esac
